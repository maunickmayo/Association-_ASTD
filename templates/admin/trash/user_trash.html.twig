{% extends 'base.html.twig' %}


{%  block title %}Voir la Corbeille {%  endblock %}

{%  block body %}
     <div class="row">

         <div class="col-10 mx-auto my-4">
         {% include 'include/_flashes.html.twig' %}
         
         </div>

     </div>

   <div class="row">

         <div class="col-12 ">
         <a href="{{ path('users_list') }}"><i class="fa fa-solid fa-arrow-left"></i> Retour à la liste des membres</a>
         </div>

     </div>


      <div class="row">
        <div class="col-10 mx-auto my-4">

            <h1 class="text-center my-4">Liste des membres archivés</h1>

            <table class="table">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Nom</th>
                    <th>Prenom</th>
                    <th>E-mail</th>
                    <th>Inscrit le </th>
                    <th>Modifié le </th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for user in archivedusers %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.firstname }}</td>
                        <td>{{ user.lastname }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.createdAt | date('d/m/Y') }}</td>
                        <td>{{ user.updatedAt | date('d/m/Y') }}</td>
                        <td>
                            <a href="{{ path('restore_user', {"id": user.id}) }}" class="text-info" title="Restaurer le membre"><i class="fa-solid fa-trash-arrow-up"></i></a>
                            <a href="{{ path('hard_delete_user', {"id": user.id}) }}" class="text-danger" title="Supprimer définitivement" onclick="return confirm('Voulez-vous supprimer définitivement ce membre ?')"><i class="fa fa-times-circle"></i></a>
                            
                        </td>
                    </tr>
                {% else %}
                      <tr>
                         <td colspan="12" class="bg-warning text-center"> Aucun membre dans la Corbeille</td>
                      </tr>
                {% endfor %}
                </tbody>
            </table>

        </div>
    </div>

{%  endblock %}

