{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
       


       <div class="container-fluid ">
                   
                   <div class="row">
                            {% for flash_error in app.flashes('verify_email_error') %}
                              <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                            {% endfor %}
                    </div>
                        
                    <div class="row py-3">
                          <div class="col-12 d-flex justify-content-center"> 
                                  {{ form_start(addUserForm, {'attr': {'class': 'col-sm-9 col-md-6 col-lg-4 register p-3'}}) }}
                                     <h1 class="h3 font-weight-normal text-center text-header">Ajouter un Membre</h1>
                                     <div class="col-12 col-md-12 col-lg-12"> {{ form_row(addUserForm.lastname) }}</div>   
                                     <div class="col-12 col-md-12 col-lg-12"> {{ form_row(addUserForm.firstname) }}</div> 
                                     <div class="col-12 col-md-12 col-lg-12"> {{ form_row(addUserForm.email) }}</div> 
                                     <div class="col-12 col-md-12 col-lg-12"> {{ form_row(addUserForm.phone) }}</div> 
                                     <div class="col-12 col-md-12 col-lg-12"> {{ form_row(addUserForm.plainPassword) }}</div> 
                                     <div class="col-12 col-md-12 col-lg-12"> {{ form_row(addUserForm.genre) }}</div> 
                                     <div class="col-12 col-md-12 col-lg-12"> {{ form_row(addUserForm.country) }}</div> 
                                     <div class="row"> 
                                          <div class="col-5 col-md-5 col-lg-5"> {{ form_row(addUserForm.numberstreet) }} </div> 
                                           <div class="col-7 col-md-7 col-lg-7">{{ form_row(addUserForm.zipcode) }} </div> 
                                     </div> 
                                     <div class="col-12 col-md-12 col-lg-12">  {{ form_row(addUserForm.adress, {'attr': {'class': ''}}) }}</div> 
                                     <div class="col-12 col-md-12 col-lg-12"> {{ form_row(addUserForm.city) }}</div> 
                                     <div class="col-12 col-md-12 col-lg-12">
                                           <button type="submit" class="btn col-12 col-md-9 col-lg-12 white" id="btn-banner" type="submit" formnovalidate>
                                                  Ajouter
                                            </button>
                                      </div> 
                                 {{ form_end(addUserForm) }}  
                          </div>
                    </div>
                          
                          
                         
       </div>
 


   
   
   
  
{% endblock %}
   
     
 

  
