{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
       


       <div class="container-fluid">

                   <div class="row">
                            {% for flash_error in app.flashes('verify_email_error') %}
                              <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                            {% endfor %}

                    </div>
         
                            
                    <div class="row register py-3">
                          <div class="col-12 d-flex justify-content-center"> 
                                  {{ form_start(form, {'attr': {'class': 'col-sm-9 col-md-6 col-lg-4 form my-2 mb-5 mt-3'}}) }}
                                     <h1 class="h3 font-weight-normal text-center">Modifirer mes informations </h1>
                                     <div class="col-12 col-md-12 col-lg-12"> {{ form_row(form.lastname) }}</div>   
                                     <div class="col-12 col-md-12 col-lg-12">   {{ form_row(form.firstname) }}</div> 
                                     <div class="col-12 col-md-12 col-lg-12"> {{ form_row(form.email) }}</div> 
                                     <div class="col-12 col-md-12 col-lg-12"> {{ form_row(form.phone) }}</div> 
                            
                                     <div class="col-12 col-md-12 col-lg-12"> {{ form_row(form.country) }}</div> 
                                    
                                     <div class="col-12 col-md-12 col-lg-12"> {{ form_row(form.numberstreet) }}</div> 
                                     <div class="col-12 col-md-12 col-lg-12">  {{ form_row(form.adress, {'attr': {'class': ''}}) }}</div> 
                                      <div class="col-12 col-md-12 col-lg-12"> {{ form_row(form.zipcode) }}</div> 
                                      <div class="col-12 col-md-12 col-lg-12"> {{ form_row(form.city) }}</div> 
                               
                                     
                                     
                                 
                                     <div class="col-12 col-md-12 col-lg-12">
                                             <button type="submit" class="btn col-sm-12 col-md-9 col-lg-12 white" id="btn-banner" type="submit" formnovalidate>
                                                   Soumettre
                                              </button>
                                      </div> 
                                     
                                  
                               

                                 {{ form_end(form) }}  
                          </div>
                    </div>
                          
                          
                         
       </div>
 


   
   
   
  
{% endblock %}
   
     
 

  
