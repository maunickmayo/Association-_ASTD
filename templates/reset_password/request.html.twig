{% extends 'base.html.twig' %}

{% block title %}réinitialiser votre mot de passe {% endblock %}

{% block body %}

    
   

     <div class="container-fluid my-5">
        <div class="row justify-content-center">
         {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
        </div>
        <div class="row justify-content-center">
          <h1 class="text-center">Réinitialisez votre mot de passe</h1>
                  <div class="col-lg-5 col-md-7 col-12">
                 

    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div>
            <small>
                Entrez votre adresse e-mail et nous vous enverrons un
                 lien pour réinitialiser votre mot de passe.
            </small>
        </div>

        <button class="btn btn-primary col-12" id="btn-banner">Envoyer un e-mail de réinitialisation du mot de passe</button>
    {{ form_end(requestForm) }}
                  
                  </div>
        </div>
     </div>
   
{% endblock %}
